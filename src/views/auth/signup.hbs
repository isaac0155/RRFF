<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            
            <div class="card-header text-center">
                <div class="container">
            </div>
                <img src="/img/follow.png" alt="logo" class="img mx-auto" width="70px" height="70px">
                <h3>Registrar Nuevo Usuario</h3>
            </div>
            <div class="card-body">
                <form action="/signup" method="post">
                    <div class="form-group">
                        <label for="" class="form-label">Nombre AD</label>
                        <input type="text" name="username" placeholder="Nombre AD" class="form-control" autofocus required>
                        <p class="color-red">La contraseña será la misma que el AD.</p>
                    </div>
                    <div class="form-group">
                        <label for="" class="form-label">Rol Usuario</label>
                        <select class="form-select" name="rol" aria-label="Default select example" required>
                            <option selected value="null">Selecciona una opción</option>
                            {{#each tipo}}
                            <option value="{{idRol}}">{{nombreRol}}</option>
                            {{else}}
                            <option value="">No hay Roles Registrados</option>
                            {{/each}}
                        </select>
                    </div>
                   <div class="form-group">
                    <label for="" class="form-label">Estado</label>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="activo" id="flexRadioDefault1" checked>
                        <label class="form-check-label" for="flexRadioDefault1">
                            Activo
                        </label>
                    </div>
                   </div>
                   
                    <div class="form-group d-grid gap-2" >
                        <button class="btn btn-success btn-blok" id="btn">Registrarse</button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

